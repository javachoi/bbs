package plsql;

import java.sql.CallableStatement;
import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.SQLException;
import java.sql.Statement;
import java.sql.Types;

public class PlsqlProcedure {

	public static void main(String[] args) throws SQLException, ClassNotFoundException {
		
		// oracle db연결
		//DriverManager.registerDriver(new oracle.jdbc.driver.OracleDriver());
		
		// DB연결
		Class.forName("oracle.jdbc.driver.OracleDriver");
		String url = "jdbc:oracle:thin:@localhost:1521:orcl";
		
		// 변수선언
		int p1InValue = Integer.parseInt(args[0]);
		int p2InOutValue = Integer.parseInt(args[1]);
		int p3OutValue;
		
				
		// 계정연결
		Connection conn = DriverManager.getConnection(url,"javalink","javalink");
		CallableStatement cs = conn.prepareCall("{call compute_power(?,?,?)}"); // 물음표는 변수의 갯수
		cs.setInt(1,p1InValue);
		
		cs.setInt(2,p2InOutValue);
		//cs.registerOutParameter(2, p2InOutValue); 이렇게 써도 됨 
		cs.registerOutParameter(2, Types.INTEGER);
		cs.registerOutParameter(3, Types.INTEGER);
		
		cs.execute();
	}

}
